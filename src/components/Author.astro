---
interface Props {
    name: string;
    avatar: string;
    role: string;
    bio: string;
    social?: {
        github?: string;
        linkedin?: string;
    };
}

const { name, avatar, role, bio, social = {} } = Astro.props;
---

<div class="flex flex-col items-center p-8 border border-neutral-800 rounded-xl bg-neutral-900/50 backdrop-blur-sm">
    <img 
        src={avatar} 
        alt={name}
        class="w-32 h-32 rounded-full object-cover border-4 border-[#ff6f61] shadow-lg shadow-[#ff6f61]/20 hover:scale-105 transition-transform duration-300"
    />
    <div class="text-center mt-6 space-y-2">
        <h3 class="text-xl font-bold text-white">{name}</h3>
        <p class="text-[#ff6f61]">{role}</p>
        <p class="text-neutral-400 text-sm leading-relaxed">{bio}</p>
        
        {social && Object.keys(social).length > 0 && (
            <div class="flex justify-center gap-4 mt-6">
                {social.github && (
                    <a href={social.github} 
                       class="text-neutral-400 hover:text-[#ff6f61] transition-colors"
                       target="_blank"
                       rel="noopener noreferrer">
                        GitHub
                    </a>
                )}
                {social.linkedin && (
                    <a href={social.linkedin}
                       class="text-neutral-400 hover:text-[#ff6f61] transition-colors"
                       target="_blank"
                       rel="noopener noreferrer">
                        LinkedIn
                    </a>
                )}
            </div>
        )}
    </div>
</div>