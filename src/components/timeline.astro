---
interface TimelineItem {
    title: string;
    company: string;
    date: string;
    location: string;
    description: string[];
}

interface Props {
    items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="space-y-8">
    {items.map((item) => (
        <div class="relative pl-8 before:absolute before:left-0 before:h-full before:w-[2px] before:bg-gradient-to-b before:from-green-500 before:to-cyan-500">
            <div class="absolute left-0 w-3 h-3 bg-green-500 rounded-full -translate-x-1/2"></div>
            <div class="space-y-2">
                <h3 class="text-xl font-semibold text-green-500">{item.title}</h3>
                <p class="text-neutral-400">{item.company} â€¢ {item.date}</p>
                <p class="text-sm text-neutral-500">{item.location}</p>
                <ul class="list-disc list-inside space-y-1 text-neutral-300">
                    {item.description.map(desc => <li>{desc}</li>)}
                </ul>
            </div>
        </div>
    ))}
</div>