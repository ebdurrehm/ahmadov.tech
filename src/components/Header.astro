---
// Frontmatter for Astro component
// Define props or import utilities as needed
import { SITE_TITLE } from '../consts';
---

<header class="fixed w-full top-0 z-50 backdrop-blur-md bg-black/80 border-b border-neutral-800">
    <nav class="container mx-auto px-4 py-4">
        <ul class="flex items-center justify-center gap-8">
            <li>
                <a href="/" 
                   class="text-lg font-medium text-white hover:text-[#ff6f61] transition-colors">
                    Home
                </a>
            </li>
            <li>
                <a href="/blog" 
                   class="text-lg font-medium text-white hover:text-[#ff6f61] transition-colors">
                    Blog
                </a>
            </li>
            <li>
                <a href="/projects" 
                   class="text-lg font-medium text-white hover:text-[#ff6f61] transition-colors">
                    Projects
                </a>
            </li>
            <li>
                <a href="/contact" 
                   class="text-lg font-medium text-white hover:text-[#ff6f61] transition-colors">
                    Contact
                </a>
            </li>
        </ul>
    </nav>
</header>

<style>
  header {
    background: linear-gradient(to right, #000000, #140d1a, #000000);
    backdrop-filter: blur(20px); /* Smooth blur effect for translucency */
  }
  header ul {
  display: flex;
  align-items: center; /* Centers items vertically */
  gap: 1.5rem; /* Space between items */
  list-style: none; /* Removes bullet points */
}

header ul li {
  margin: 0;
  padding: 0;
}

  nav a {
    transition: color 0.3s ease, transform 0.3s ease;
  }

  nav a:hover {
    transform: translateY(-2px);
  }

  nav a:after {
    content: '';
    display: block;
    margin: 8px auto;
    height: 2px;
    width: 0%;
    background: linear-gradient(to right, #ff416c, #ff4b2b);
    transition: width 0.4s ease-in-out;
  }

  nav a:hover:after {
    width: 100%;
  }
</style>
