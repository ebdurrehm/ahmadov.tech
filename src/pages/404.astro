---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="404: Not Found" description="Page not found" />
    </head>
    <body class="bg-[#0a0a0a] text-white">
        <Header />
        <main class="container mx-auto px-4 min-h-screen flex items-center justify-center">
            <div class="text-center">
                <h1 class="text-9xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-green-500 to-cyan-500">
                    404
                </h1>
                <p class="text-2xl text-neutral-400 mt-4 mb-8">
                    Page not found
                </p>
                <a href="/" 
                   class="inline-block px-8 py-3 border border-green-500 rounded-full text-green-500 hover:bg-green-500 hover:text-white transition-colors">
                    Go Home
                </a>
            </div>
        </main>
        <Footer />
    </body>
</html>